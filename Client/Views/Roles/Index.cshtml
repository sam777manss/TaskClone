@model IEnumerable<Roles>
@*@{
    Layout = null;
}*@

<!-- below three are datatable.net require link this are suffient to create datatable -->
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js" **important**></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js" **important**></script>
<link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" **important** />
<!-- datatable.net required link ends -->

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "aLengthMenu": [[5, 10, 55, -1], [5, 10, 50, "All"]],
            "iDisplayLength": 25
        });
    });

</script>
<!-- DataTable start -->
<div class="content-wrapper">


    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Table: </span> Roles</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
@*            <h5 class="card-header">Roles Table</h5>
*@            
            @Html.Partial("_CreateRoleModal")
            <div class="table-responsive text-nowrap card-header">
                <table class="table table-striped" id="example" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            @*<th>Status</th>*@
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@role.Id</strong></td>
                                <td>@role.Name</td>
                                @*<td><span class="badge bg-label-primary me-1">Active</span></td>*@
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item details" data-id="@role.Id" href="/Roles/Update/@role.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                            <a class="dropdown-item" href="/Roles/Delete/@role.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

        <hr class="my-5" />

    </div>
    <!-- Footer -->
    <!-- / Footer -->

    <div class="content-backdrop fade"></div>
</div>

