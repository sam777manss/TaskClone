<script>
    function Sum(str) {
        
        var currentValue = parseInt(document.querySelector('.AmountDisplay').innerHTML);
        var initialValue = parseInt(document.querySelector("#initialValue").value)

            if (str === 'plus') {
            document.querySelector('.AmountDisplay').innerHTML = currentValue + initialValue;
            $('input[name="ProductSum"]').val(document.querySelector('.AmountDisplay').innerHTML);
            }
            else if (currentValue > initialValue ) {
                if (str === 'minus') {
                    document.querySelector('.AmountDisplay').innerHTML = currentValue - initialValue;
                $('input[name="ProductSum"]').val(document.querySelector('.AmountDisplay').innerHTML);

                }
            }
    }


    $('.quantityCheck button').on('click', function () {
        var button = $(this);
        var oldValue = button.parent().parent().find('input').val();
        if (button.hasClass('btn-plus')) {
            var newVal = parseFloat(oldValue) + 1;
        } else {
            if (oldValue > 1) {
                var newVal = parseFloat(oldValue) - 1;
            } else {
                newVal = 1;
            }
        }
        button.parent().parent().find('input').val(newVal);
    });

    function AddToCart() {
        
        // Prevent the default form submission
        event.preventDefault();
        // Get the form element
        var form = document.getElementById('UserCart');

        // Create a new FormData object
        var formData = new FormData(form);    // Make an Ajax request
        $.ajax({
            url: '/User/ProductDetail',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                
                if (response.success) {
                    window.location.href = '/User/UserCartDetails';
                } else {
                    window.location.href = '/User/AddUserShippingInfo';
                }
                // Handle the success response
                //console.log(response);
            },
            error: function (xhr, status, error) {
                // Handle the error response
                console.error(error);
            }
        });
    }

</script>
